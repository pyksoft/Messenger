<%#= form_with(model: message, local: true) do |form| %>
<!-- Instead of using just the message model, pass an array which includes @conversation -->
<%= form_with(model: [@conversation, message], local: true, class: "d-flex") do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text_area_field field p-2">
    <%#= form.label :content %>
    <%= form.text_area :content, id: :message_content, placeholder: "Write a message" %>
  </div>

  <div class="actions p-2">
    <%= form.submit 'Send', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
