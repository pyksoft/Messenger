<section class="header">
  <div class="header_row d-flex justify-content-between ">
    <div class="header_title p-2">
      <h1>WhomsApp Messenger</h1>
    </div>
    <div class="header_button p-2 align-self-center">
      <%= link_to image_tag(asset_path('new_conversation_button.png'), width: 35), new_conversation_path %>
    </div>
  </div>
</section>

<section class="conversations">
  <% @conversations.each do |conversation| %>
  <a href="<%= conversation_messages_path(conversation) %>">
    <div class="conversation_row d-flex justify-content-between">
      <div class="conversation p-2">
        <% if conversation.user2 == current_user %>
        <h2><%= conversation.user1.profile.name %></h2>
        <% else %>
        <h2><%= conversation.user2.profile.name %></h2>
        <% end %>
      </div>
      <div class="conversation_arrow p-2">
        <h2>></h2>
      </div>
    </div>
  </a>
  <% end %>
</section>
