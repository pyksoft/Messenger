<%= form_with(model: conversation, local: true, class: 'new_conversation_form') do |form| %>
  <% if conversation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(conversation.errors.count, "error") %> prohibited this conversation from being saved:</h2>

      <ul>
      <% conversation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center">
    <div class="field p-2">
      <%= form.collection_select :user2_id, User.where.not(id: current_user.id).ordered_by_profile_name, :id, :profile_name, id: :conversation_user2_id %>
    </div>

    <div class="actions p-2">
      <%= form.submit 'Create', class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Cancel', conversations_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
